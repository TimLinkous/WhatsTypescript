{
    "compilerOptions": {
      "target": "es6",
      "module": "none",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["dom", "es6"],  // Specify that the project is for the DOM and ES6 environment
      "types": []              // Explicitly specify that no additional types should be included
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  